apiVersion: v1
kind: Service
metadata:
  name: hello-app-service
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/subnets: EKS_PUBLIC_SUBNETS
    alb.ingress.kubernetes.io/scheme: internet-facing
  namespace: EKS_K8S_NAMESPACE
  labels:
    app: hello-app
spec:
  selector:
    app: hello-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
  type: LoadBalancer